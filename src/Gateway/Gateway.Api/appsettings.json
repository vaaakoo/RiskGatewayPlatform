{
  "Jwt": {
    "Issuer": "identity",
    "Audience": "gateway"
  },
  "Identity": {
    "JwksUrl": "http://identity-api:8080/.well-known/jwks.json"
  },
  "ReverseProxy": {
    "Routes": {
      "orders-get": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "scope:orders.read",
        "RateLimiterPolicy": "per-client"
      },
      "orders-post": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "scope:orders.write",
        "RateLimiterPolicy": "per-client"
      },
      "payments-get": {
        "ClusterId": "payments",
        "Match": {
          "Path": "/payments",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "scope:payments.read",
        "RateLimiterPolicy": "per-client"
      },
      "payments-post": {
        "ClusterId": "payments",
        "Match": {
          "Path": "/payments",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "scope:payments.write",
        "RateLimiterPolicy": "per-client"
      }
    },
    "Clusters": {
      "orders": {
        "Destinations": {
          "d1": { "Address": "http://orders-api:8080/" }
        }
      },
      "payments": {
        "Destinations": {
          "d1": { "Address": "http://payments-api:8080/" }
        }
      }
    }
  }
}
